<Window x:Class="Eshop.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MySQL Konzole" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="SQL pøíkaz:" FontWeight="Bold"/>

        <TextBox Grid.Row="1" x:Name="SqlBox"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
            <Button Content="Execute" Width="100" Click="Execute_Click"/>
            <TextBlock x:Name="StatusText" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>