<Window x:Class="Eshop.UI.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Produkty" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="ProductGrid"
                  AutoGenerateColumns="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Název" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Cena" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Kategorie" Binding="{Binding Category}"/>
                <DataGridCheckBoxColumn Header="Skladem" Binding="{Binding InStock}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Naèíst" Width="100" Click="Load_Click"/>
            <Button Content="Pøidat" Width="100" Margin="5,0,0,0" Click="Add_Click"/>
            <Button Content="Uložit zmìny" Width="120" Margin="5,0,0,0" Click="Save_Click"/>
            <Button Content="Smazat" Width="100" Margin="5,0,0,0" Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</Window>