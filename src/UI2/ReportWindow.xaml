<Window x:Class="Eshop.UI.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report: objednavky zakazniku"
        Height="400" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Nacist report"
                Width="150"
                Height="30"
                Click="Load_Click"/>

        <DataGrid Grid.Row="1"
                  x:Name="ReportGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,10,0,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Zakaznik" Binding="{Binding CustomerName}"/>
                <DataGridTextColumn Header="Pocet objednavek" Binding="{Binding OrderCount}"/>
                <DataGridTextColumn Header="Celkem utraceno" Binding="{Binding TotalSpent}"/>
                <DataGridTextColumn Header="Prvni objednavka" Binding="{Binding FirstOrder}"/>
                <DataGridTextColumn Header="Posledni objednavka" Binding="{Binding LastOrder}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
