<Window x:Class="Eshop.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MySQL Konzole" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="SQL příkaz:" FontWeight="Bold"/>

        <TextBox Grid.Row="1" x:Name="SqlBox"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
            <Button Content="Execute" Width="100" Click="Execute_Click"/>
            <TextBlock x:Name="StatusText" Margin="10,0,0,0"/>
        </StackPanel>

		<StackPanel Orientation="Horizontal" Margin="0,5,0,0">
			<Button Content="Execute SQL" Width="120" Click="Execute_Click"/>
			<Button Content="Produkty" Width="120" Margin="5,0,0,0"
					Click="Products_Click"/>
		</StackPanel>

		<Button Content="Objednávky" Width="120" Margin="5,0,0,0"
        Click="Orders_Click"/>

		<Button Content="Reporty"
        Width="120"
        Margin="5,0,0,0"
        Click="Reports_Click"/>

		<Button Content="Import"
        Width="120"
        Margin="5,0,0,0"
        Click="Import_Click"/>

	</Grid>
</Window>