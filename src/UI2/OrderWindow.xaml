<Window x:Class="Eshop.UI.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vytvoreni objednavky" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Zakaznik:" VerticalAlignment="Center"/>
            <ComboBox x:Name="CustomerBox" Width="300" Margin="10,0,0,0"
                      DisplayMemberPath="Name"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="ProductGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Produkt" Binding="{Binding Name}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Cena" Binding="{Binding Price}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Mnozstvi" Binding="{Binding Quantity}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Vytvorit objednavku"
                Height="35" Margin="0,10,0,0"
                Click="CreateOrder_Click"/>
    </Grid>
</Window>